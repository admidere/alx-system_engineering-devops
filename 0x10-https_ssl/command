sudo apt update
sudo apt install snapd
sudo apt-get remove certbot
sudo apt-get install certbot
sudo certbot certonly --standalone --preferred-challenges http --http-01-port 80 -d www.admidere.tech
sudo cat /etc/letsencrypt/live/www.admidere.tech/fullchain.pem /etc/letsencrypt/live/www.admidere.tech/privkey.pem | sudo tee /etc/haproxy/certs/www.admidere.tech.pem
sudo chmod -R go-rwx /etc/haproxy/certs
sudo nano /etc/haproxy/haproxy.cfg
