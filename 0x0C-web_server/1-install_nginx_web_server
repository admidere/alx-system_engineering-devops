#!/usr/bin/env bash
# Install nginx on your web-01

if [ -x "$(command -v nginx)" ]; then
  echo "Nginx is already installed, skipping installation and configuration."
else
  # Update package list and install Nginx
  sudo apt update
  sudo apt install -y nginx

  # Configure Nginx to listen on port 80
  sudo sed -i 's/listen\s*80;/listen 80 default_server;/g' /etc/nginx/sites-available/default

  # Restart Nginx
  sudo service nginx restart

  # Create default index.html file with "Hello World!" message
  echo "Hello World!" | sudo tee /var/www/html/index.html
fi
