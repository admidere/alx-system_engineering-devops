#!/usr/bin/env bash
# Install nginx on your Ubuntu machine

if [ -x "$(command -v nginx)" ]; then
  echo "Nginx is already installed, skipping installation and configuration."
else
  sudo apt update
  sudo apt install -y nginx
fi

# Configure Nginx to redirect requests to /redirect_me to another page
sudo bash -c 'cat > /etc/nginx/sites-available/default <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4$request_uri;
    }
}
EOF'

# Restart Nginx
sudo service nginx restart
