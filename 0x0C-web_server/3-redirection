#!/usr/bin/env bash
# Install nginx on your web server if it is not already installed
if [ ! -x "$(command -v nginx)" ]; then
  sudo apt update
  sudo apt install -y nginx
fi

# Configure Nginx to redirect /redirect_me to the desired URL
sudo sed -i 's/# server_name_in_redirect off;/server_name_in_redirect off;/' /etc/nginx/nginx.conf
sudo sed -i '33 a \\trewrite ^/redirect_me$ https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;' /etc/nginx/sites-available/default

# Restart Nginx
sudo service nginx restart
